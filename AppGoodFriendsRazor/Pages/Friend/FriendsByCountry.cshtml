@page
@model AppGoodFriendsRazor.Pages.Friend.FriendsByCountryModel
@{
    ViewData["Title"] = "Overview friends by country";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<a href="javascript:window.history.back()" class="text-decoration-none">
    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-left bi-2x" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M5.354 11.354a.5.5 0 0 1 0-.708L2.707 8.5l2.647-2.646a.5.5 0 0 1 .708.708L4.207 8.5l1.854 1.854a.5.5 0 0 1-.708.708z" />
        <path fill-rule="evenodd" d="M3 8.5a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3.5a.5.5 0 0 1-.5-.5z" />
    </svg>
</a>

<div class="container px-4 py-4" id="friends-by-country">
    <h2 class="pb-2 border-bottom">Friends by country</h2>
    <p>Click in on a country below to see what cities my friends are living in.</p>
 
    <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        @foreach(var gang in Model.FriendsByCountries)
        {
            <a href="~/Friend/FriendInCountry?country=@gang.Countries" class="text-decoration-none">
                <div class="col">
                    <div class="card card-cover h-100 overflow-hidden text-bg-dark rounded-4 shadow-lg" style="background-image: url('https://images.pexels.com/photos/1144176/pexels-photo-1144176.jpeg');">

                        <div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                            <h3 class="pt-1 mt-1 mb-4 display-6 lh-1 fw-bold">@gang.Countries</h3>
                            <p> Total friends: @gang.TotalFriends in @gang.TotalCities cities </p>
                        </div>
                    </div>
                </div>
            </a>
        }
    </div>
</div>