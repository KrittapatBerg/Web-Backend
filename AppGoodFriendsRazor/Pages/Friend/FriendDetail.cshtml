@page
@model AppGoodFriendsRazor.Pages.Friend.FriendDetailModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken] 

<a href="javascript:window.history.back()" class="text-decoration-none">
    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-left bi-2x" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M5.354 11.354a.5.5 0 0 1 0-.708L2.707 8.5l2.647-2.646a.5.5 0 0 1 .708.708L4.207 8.5l1.854 1.854a.5.5 0 0 1-.708.708z" />
        <path fill-rule="evenodd" d="M3 8.5a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3.5a.5.5 0 0 1-.5-.5z" />
    </svg>
</a>

<div class="container px-4 py-4" id="view-friend">
    <h2 class="pb-2 border-bottom"> Details of a friend</h2>

    @{ var friend = Model.FriendDetail; }

    <h6>Below you find all the details of <b>@friend.FirstName </b> </h6>
        
    <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        <div class="col-md-7 col-lg-8">
            <form class="needs-validation" novalidate>
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label for="firstName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="firstName" value="@friend.FirstName" readonly required>
                    </div>

                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastName" value="@friend.LastName" readonly required>
                    </div>

                    <div class="col-sm-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email" value="@friend.Email" readonly>
                    </div>
                    <div class="col-sm-6">
                        <label for="birthday" class="form-label">Birthday</label>
                        <input type="text" class="form-control" id="birthday"
                                value="@(friend.Birthday.HasValue ? friend.Birthday.Value.ToString("yyyy-MM-dd") : "N/A")" readonly>
                    </div>

                    <div class="row g-3 visible">
                        @if (friend.Address != null)
                        {
                            <div class="col-12">
                                <label for="address" class="form-label">Address</label>
                                <input class="form-control" id="address" value="@friend.Address.StreetAddress" readonly required>
                            </div>

                            <div class="col-md-3">
                                <label for="zip" class="form-label">Zip</label>
                                <input type="text" class="form-control" id="zip" value="@friend.Address.ZipCode" readonly required>
                            </div>

                            <div class="col-md-4">
                                <label for="city" class="form-label">City</label>
                                <input type="text" class="form-control" id="city" value="@friend.Address.City" readonly required>
                            </div>

                            <div class="col-md-5">
                                <label for="country" class="form-label">Country</label>
                                <input type="text" class="form-control" id="country" value="@friend.Address.Country" readonly required>
                            </div>
                        }
                        else
                        {
                            <div class="col-12">
                                <label for="address" class="form-label">Address</label>
                                <input type="text" class="form-control" id="address" value="N/A" readonly required>
                            </div>
                        }
                    </div>
                </div>
                <a href="~/Edit/EditFriendDetail?id=@friend.FriendId" class="w-100 btn btn-primary btn-lg my-4" type="button">Edit @friend.FirstName </a>

            </form>
        </div> 
    </div>
 
    <!-- Pet starts here -->
    <div class="col-md-7 col-lg-8">
        <div class="form-group">
            <h3 class="pb-2">@friend.FirstName's pets </h3>
           
            @foreach (var pet in Model.FriendDetail.Pets)
            {
                <div class="row mb-2 text-center">
                    <span class="form-control">@pet.Name the @pet.Mood @pet.Kind
                        <div class="col-md-2 themed-grid-col">
                            <a href="/Edit/AddEditPet?id=@pet.PetId" class="w-100 btn btn-primary">Edit @pet.Name</a>
                        </div>
                    </span>
                </div>
            }
        
            <a href="/Edit/AddEditPet?friendId=@Model.FriendDetail.FriendId" class="w-100 btn btn-primary">Add Pet</a>
        </div>
    </div> 


    <!-- Quote starts here -->
    <div class="col-md-7 col-lg-8">
        <div class="form-group">
            <h3 class="pb-2">@friend.FirstName Favorite Quotes</h3>

            @foreach (var quote in Model.FriendDetail.Quotes)
            {
                <div class="row mb-2 text-center">
                    <span class="form-control">
                        <div class="col-md-10 themed-grid-col">
                            @quote.Quote
                            <div class="text-end" style="font-weight: bold;">@quote.Author</div>
                            <a href="/Edit/AddEditQuote?quoteId=@quote.QuoteId&amp;friendId=@Model.FriendDetail.FriendId" class="btn btn-primary btn-sm" role="button">Edit Quote</a>
                        </div>
                    </span>

                </div>
            }
            <a href="/Edit/AddEditQuote?friendId=@Model.FriendDetail.FriendId" class="w-100 btn btn-primary">Add Quote</a>
        </div>
    </div>

</div>