@page
@model AppGoodFriendsRazor.Pages.ViewFriend2Model
@{
    ViewData["Title"] = "Another approach to view friend through an ID";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<div class="container px-4 py-4" id="view-friend-pet-quote">
    <h2 class="pb-2 border-bottom">View details of a friend</h2>

    <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        <div class="col-md-7 col-lg-8">
            <form class="needs-validation" novalidate>
                <div class="row g-3">
                    <!-- Hidden fields used to bind input model -->
                    <input asp-for="Friend2IM.FriendId" type="hidden" />
                    <input asp-for="Friend2IM.StatusIM" type="hidden" />

                    <div class="col-sm-6">
                        <label for="firstName" class="form-label">First name</label>
                        <input type="text" class="form-control" id="firstName" asp-for="Friend2IM.FirstName">
                        <span asp-validation-for="Friend2IM.FirstName" class="invalid-feedback"></span>
                    </div>

                    <div class="col-sm-6">
                        <label for="lastName" class="form-label">Last name</label>
                        <input type="text" class="form-control" id="lastName" asp-for="Friend2IM.Lastname">
                        <span asp-validation-for="Friend2IM.Lastname" class="invalid-feedback"></span>
                    </div>

                    <div class="col-sm-6">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" asp-for="Friend2IM.Email">
                    </div>
                    <div class="col-sm-6">
                        <label for="birthday" class="form-label">Birthday</label>
                        <input type="birthday" class="form-control" id="birthday" asp-for="Friend2IM.Birthday">
                    </div>

                    <div class="row g-3 visible">
                        <div class="col-12">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" asp-for="Friend2IM.AddressIM.StreetAddress">
                            <span asp-validation-for="Friend2IM.AddressIM.StreetAddress" class="invalid-feedback"></span>
                        </div>

                        <div class="col-md-3">
                            <label for="zip" class="form-label">Zipcode</label>
                            <input type="text" class="form-control" id="zipCode" asp-for="Friend2IM.AddressIM.ZipCode">
                            <span asp-validation-for="Friend2IM.AddressIM.ZipCode" class="invalid-feedback"></span>
                        </div>

                        <div class="col-md-4">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" asp-for="Friend2IM.AddressIM.City">
                            <span asp-validation-for="Friend2IM.AddressIM.City" class="invalid-feedback"></span>
                        </div>

                        <div class="col-md-5">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" id="country" asp-for="Friend2IM.AddressIM.Country">
                            <span asp-validation-for="Friend2IM.AddressIM.Country" class="invalid-feedback"></span>

                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>