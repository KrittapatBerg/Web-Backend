@page
@model AppGoodFriendsRazor.Pages.FriendListModel
@{
    ViewData["Title"] = "Show a list of Friends, hopefully edit and add";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<!-- Page edit-group -->
<div class="container px-4 py-4" id="edit-group">
    <form class="needs-validation" method="post" novalidate>
        <!-- This is the parameter that will be sent to Post when item is clicked -->
        <input type="hidden" name="friendId" data-seido-selected-item-id-target />

        <h2 class="pb-2 border-bottom">
            Edit the list of 
            <button class="btn btn-primary-outline" type="submit" asp-page-handler="Save">
                <svg class="bi text-body-secondary flex-shrink-0 me-3" width="1.75em" height="1.75em"><use xlink:href="#save" /></svg>
            </button>
            <button class="btn btn-primary-outline" type="submit" asp-page-handler="Undo">
                <svg class="bi text-body-secondary flex-shrink-0 me-3" width="1.75em" height="1.75em"><use xlink:href="#undo" /></svg>
            </button>
        </h2>

        <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
            <div class="col-md-7 col-lg-10">

                <!-- Added the possibility to Create a new Quote -->
                <div class="row mb-2 text-center">
                    <div class="col-md-10 themed-grid-head-col">Name</div>
                    <div class="col-md-2 themed-grid-head-col">
                        <button class="btn btn-success btn-sm m-1" type="button"
                                data-bs-toggle="collapse" data-bs-target="#collapseAdd">
                            New
                        </button>
                    </div>
                </div>

                <div class="collapse row mb-2 text-center" id="collapseAdd">
                    <div class="form-floating col-md-12 themed-grid-col">
                        <!--Fields to edit -->
                        <input asp-for="NewFriendIM.FirstName" class="form-control" value="@Model.NewFriendIM.FirstName" />
                        <label for="NewQuoteIM.Quote">quote</label>
                    </div>
                    <div class="form-floating col-md-10 themed-grid-col">
                        <!--Fields to edit -->
                        <input asp-for="NewFriendIM.LastName" class="form-control" value="@Model.NewFriendIM.LastName" />
                        <label for="NewFriendIM.LastName">LastName</label>
                    </div>
                    <div class="form-floating col-md-2 themed-grid-col">
                        <button type="submit" asp-page-handler="Add" class="btn btn-success btn-sm m-1">
                            Ok
                        </button>
                    </div>
                </div>

                @for (int k = 0; k < Model.FriendsIM.Count; k++)
                {
                    <div class="row mb-2 text-center @(Model.FriendsIM[k].StatusIM == AppGoodFriendsRazor.Pages.FriendListModel.enStatusIM.Deleted? "d-none" : null)">

                        <!-- Hidden fields so they are preserved by the Modelbinder -->
                        <input asp-for="FriendsIM[k].StatusIM" value="@Model.FriendsIM[k].StatusIM" class="form-control" type="hidden" />
                        <input asp-for="FriendsIM[k].FriendId" value="@Model.FriendsIM[k].FriendId" class="form-control" type="hidden" />
                        <input asp-for="FriendsIM[k].FirstName" value="@Model.FriendsIM[k].FirstName" class="form-control" type="hidden" />
                        <input asp-for="FriendsIM[k].LastName" value="@Model.FriendsIM[k].LastName" class="form-control" type="hidden" />

                        <div class="col-md-10 themed-grid-col">
                            @Model.FriendsIM[k].FirstName
                            <div class="col-md-16  text-end">@Model.FriendsIM[k].FirstName</div>
                        </div>
                        <div class="col-md-2 themed-grid-col">
                            <button class="btn btn-secondary btn-sm m-1" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#collapseEdit_@Model.FriendsIM[k].FriendId"
                                    data-seido-selected-item-id="@Model.FriendsIM[k].FriendId">
                                Edit
                            </button>

                            <!-- Button trigger post DeleteArtist -->
                            <button type="submit" asp-page-handler="Delete" class="btn btn-danger btn-sm m-1"
                                    data-seido-selected-item-id="@Model.FriendsIM[k].FriendId">
                                Del
                            </button>
                        </div>
                    </div>

                    <div class="collapse row mb-2 text-center" id="collapseEdit_@Model.FriendsIM[k].FriendId">
                        <div class="form-floating col-md-12 themed-grid-col">
                            <!--Fields to edit -->
                            <input asp-for="FriendsIM[k].editFirstName" class="form-control" value="@Model.FriendsIM[k].editFirstName" />
                            <label for="FriendsIM[k].editFirstName">FirstName</label>
                        </div>
                        <div class="form-floating col-md-10 themed-grid-col">
                            <!--Fields to edit -->
                            <input asp-for="FriendsIM[k].editLastName" class="form-control" value="@Model.FriendsIM[k].editLastName" />
                            <label for="FriendsIM[k].editLastName">LastName</label>
                        </div>
                        <div class="form-floating col-md-2 themed-grid-col">
                            <button type="submit" asp-page-handler="Edit" class="btn btn-success btn-sm m-1">
                                Ok
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </form>
</div>