@page
@model AppGoodFriendsRazor.Pages.Edit.EditQuoteModel
@{
    ViewData["Title"] = "Add and Edit Quotes of a Friend";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<a href="javascript:window.history.back()" class="text-decoration-none">
    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-left bi-2x" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M5.354 11.354a.5.5 0 0 1 0-.708L2.707 8.5l2.647-2.646a.5.5 0 0 1 .708.708L4.207 8.5l1.854 1.854a.5.5 0 0 1-.708.708z" />
        <path fill-rule="evenodd" d="M3 8.5a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3.5a.5.5 0 0 1-.5-.5z" />
    </svg>
</a>


<!DOCTYPE html>
<html>
<head>
    <title>Add/Edit Quotes</title>
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <div class="container">
        <h2>@Model.PageHeader</h2>

        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post">
            <input asp-for="FriendId" type="hidden" />
            <input asp-for="QuoteIM.QuoteId" type="hidden" />
            <input asp-for="QuoteIM.StatusIM" type="hidden" />

            <div class="form-group">
                <label asp-for="QuoteIM.Quote"></label>
                <input asp-for="QuoteIM.Quote" class="form-control" required />
                <span asp-validation-for="QuoteIM.Quote" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuoteIM.Author"></label>
                <input asp-for="QuoteIM.Author" class="form-control" required />
                <span asp-validation-for="QuoteIM.Author" class="text-danger"></span>
            </div>

            @if (Model.QuoteIM is null || Model.QuoteIM.QuoteId == Guid.Empty)
            {
                <div class="form-group">
                    <button type="submit" class="btn btn-primary" asp-page-handler="Save">Add</button>
                </div>
            }
            else
            {
                <div class="form-group">
                    <button type="submit" asp-page-handler="Edit" class="btn btn-success">Update</button>
                </div>
            }
        </form>
    </div>
</body>
</html>
<div class="container px-4 py-4" id="add-edit-quotes">
    <h2 class="pb-2 border-bottom">Add and Edit Quotes of a Friend</h2>
    <p> You can add or edit Quotes of a friend here </p>
    
   
  
</div>
