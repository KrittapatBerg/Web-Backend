@page
@model AppGoodFriendsRazor.Pages.Edit.EditPetModel
@{
    ViewData["Title"] = "Add and edit pets of a Friend";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<a href="javascript:window.history.back()" class="text-decoration-none">
    <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-arrow-left bi-2x" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M5.354 11.354a.5.5 0 0 1 0-.708L2.707 8.5l2.647-2.646a.5.5 0 0 1 .708.708L4.207 8.5l1.854 1.854a.5.5 0 0 1-.708.708z" />
        <path fill-rule="evenodd" d="M3 8.5a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3.5a.5.5 0 0 1-.5-.5z" />
    </svg>
</a>

<div class="container px-4 py-4" id="add-edit-pet">
    <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        <div class="col-md-7 col-lg-8">
            <form class="needs-validation" novalidate>
                <div class="col-md-7 col-lg-10 ">
                    <!--To keep between Posts -->
                    <input asp-for="PageHeader" value="@Model.PageHeader" type="hidden" />

                    <!-- Server side validation errors, rough but just in case client side validation is not working or tampered with -->
                    @if (Model.ValidationResult.HasErrors)
                    {
                        <div class="row g-3">
                            @foreach (var item in Model.ValidationResult.ErrorMsgs)
                            {
                                <span class="alert alert-danger" role="alert">
                                    @item
                                </span>
                            }
                        </div>
                    }
                    <h2 class="pb-2 border-bottom">@Model.PageHeader </h2>
                    <h6>Fill in the details below to add or edit a pet.</h6>

                </div>

                <div class="row g-3">
                    <!-- Hidden fields used to bind input model -->
                    <input asp-for="FriendInput.FriendId" type="hidden" />
                    <input asp-for="FriendInput.StatusIM" type="hidden" />
                    <input asp-for="FriendInput.NewPet.PetId" type="hidden" />
                    <input asp-for="FriendInput.NewPet.StatusIM" type="hidden" />


                    <input type="hidden" name="petId" data-seido-selected-item-id-target />
                    <div class="col-sm-6">
                        <label for="petName" class="form-label">Name</label>
                        <input type="text" class="form-control" id="petName" asp-for="FriendInput.NewPet.PetId">
                        <span asp-validation-for="FriendInput.NewPet.PetId" class="invalid-feedback"></span>

                        @* <input type="text" class="form-control is-invalid" id="petName" placeholder="" value="" required>
                        <div class="invalid-feedback">
                            The pet must have a name
                        </div> *@
                    </div>

                    <div class="col-sm-6">
                        <label for="petType" class="form-label">Type of animal</label>

                        <select asp-for="KindList" asp-items="@Model.KindList" class="form-control" id="petType">
                            <option value="">Pick animal type</option>
                        </select>
                        <span asp-validation-for="KindList" class="invalid-feedback"></span>
                    </div>

                    <div class="col-sm-6">
                        <label for="petType" class="form-label">Type of animal</label>
                        <select class="form-select is-invalid" id="petType" required>
                            <option value="">Choose...</option>
                            @foreach (var item in Model.KindList)
                            {
                                <option>@item.Value</option>
                            }                           
                        </select>
                        <div class="invalid-feedback">
                            Select an animal type
                        </div>
                    </div>

                    <div class="col-sm-6">
                    </div>
                    <div class="col-sm-6">
                        <label for="petMood" class="form-label">Mood of the pet</label>
                        <select class="form-select is-invalid" id="petMood" required>
                            <option value="">Choose...</option>
                            @foreach (var item in Model.MoodList)
                            {
                                <option>@item.Value</option>
                            }
                        </select>
                        <div class="invalid-feedback">
                            Select the mood of the pet
                        </div>
                    </div>
                </div>

                <div class="col-12 d-flex justify-content-center me-5 mt-5">
                    <button class="btn btn-success mx-2 mt-3 btn-lg h6" type="submit" asp-page-handler="Save">Save</button>
                    <button class="btn btn-light mx-2 mt-3 btn-lg h6" type="submit" asp-page-handler="Undo">Cancel</button>
                </div>

                <button class="w-100 btn btn-primary btn-lg my-4" type="submit">Save</button>
            </form>
        </div>
    </div>
</div>